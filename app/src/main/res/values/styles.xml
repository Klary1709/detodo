<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ButtonMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/blanco</item>
    </style>

    <style name="Tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TagPerfil">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>

    <style name="LoginEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:backgroundTint">#E4E4E4</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="CircleButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:backgroundTint">@color/blanco</item>
    </style>

</resources>
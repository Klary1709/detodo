<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/blanco"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/ivProducto"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient90deg"
                    android:layout_gravity="bottom"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvPrecioProducto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1200.99"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/blanco"
                            />
                        <TextView
                            android:id="@+id/tvPrecioRebajadoProducto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="2dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/line_through"
                            android:text="$1490.99"
                            android:textSize="14sp"
                            android:textColor="@color/blanco"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTituloProducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="bottom"
                        android:text="Pizza Gigante de un ingrediente"
                        android:textSize="18sp"
                        android:textColor="@color/blanco"
                        />

                </LinearLayout>
            </FrameLayout>
            <TextView
                android:id="@+id/tvDescripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:visibility="gone"
                android:text="La descripción debe ir aquí. La descripción debe ir aquí. La descripción debe ir aquí. La descripción debe ir aquí. La descripción debe ir aquí."
                android:textColor="@android:color/tab_indicator_text"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageviewArrowProducto"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_arrow_down"
            app:tint="@color/blanco" />
    </androidx.cardview.widget.CardView>
</LinearLayout>